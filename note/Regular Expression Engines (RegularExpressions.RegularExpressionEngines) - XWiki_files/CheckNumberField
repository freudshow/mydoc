function checknumber(i,h,b){var c;var j;if(window.event){c=window.event.keyCode}else{if(h){c=h.which}else{return true}}j=String.fromCharCode(c);if((c==null)||(c==0)||(c==8)||(c==9)||(c==13)||(c==27)){return true}if((("0123456789").indexOf(j)>-1)){return true}if(b){var g=b.indexOf(j);if(g>0||(g==0&&i.value.indexOf(j)==-1)){return true}}if(("-").indexOf(j)>-1){if(i.value.length==0){return true}else{var a=0;if(document.selection){i.focus();var d=document.selection.createRange();d.moveStart("character",-i.value.length);a=d.text.length}else{if(i.selectionStart||i.selectionStart=="0"){a=i.selectionStart}}if(a==0){return true}}}return false};